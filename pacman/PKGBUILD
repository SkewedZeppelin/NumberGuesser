# Maintainer: Tad D <tad@spotco.us>
pkgname=giveawaypwner
pkgver=v1.0
pkgrel=1
pkgdesc="Pwn all the giveaways!"
arch=('any')
url="https://github.com/SpotComms/GiveawayPwner"
license=('MIT')
depends=('java-runtime>=8')
source=($url/releases/download/$pkgver/$pkgname.jar $pkgname.desktop $pkgname.png)
md5sums=('535d8f903217956f72d0288902a80ea5' '00a1b2a4d06e32ca95e19f042e55dce9' 'd52b8de7f3a0deb1794247fe20dda10a')

build() {
  /bin/true
}

package() {
  cd "$srcdir"
  install -Dm644 $pkgname.jar "$pkgdir/usr/share/java/$pkgname/$pkgname.jar"
  install -Dm644 $pkgname.desktop "$pkgdir/usr/share/applications/$pkgname.desktop"
  install -Dm644 $pkgname.png "$pkgdir/usr/share/pixmaps/$pkgname.png"
}
